kind: Scheduled
name: Encoded PowerShell Script
description: Detects encoded PowerShell scripts.
query: |
  SysmonEvent
  | where EventID == 1
  | where Image endswith "powershell.exe"
  | where CommandLine contains "EncodedCommand"
severity: High
tactics:
  - Execution
techniques:
  - T1059.001
triggerOperator: gt
triggerThreshold: 0
